pipeline {
    agent any
    parameters {

        string(name: 'NAME', description: 'Please tell me your name')
        text(name: 'DESC', description: 'Describe about the job details')
        booleanParam(name: 'SKIP_TEST', description: 'Want to skip running Test cases?')
        choice(name: 'Mois', choices: ['Janvier', 'Fevrier','Mars','Avril','Mai','Juin','juillet','Aout','Septembre','Octobre','Novembre','Decembre'], description: 'Choose the right month')
        integer(name: 'DAY_OF_MONTH', description: 'Enter the day of the month')
        password(name: 'SONAR_SERVER_PWD', description: 'Enter SONAR password')
    }
    stages {
        stage('Start') {
            steps {
                script {
                    def name = "${params.NAME}"
                    def job="${params.DESC}"
                    def skip_test="${params.SKIP_TEST}"
                    def choice="${params.BRANCH}"
                    def password = "${params.SONAR_SERVER_PWD}"
                    if(skip_test)
                    {
                     echo " Bonjour $name vous avez chosis la branche $choice et vous avez choisis de skip les running tests" 
                    }
                    else
                    {
                     echo " Bonjour $name vous avez chosis la branche $choice et vous avez choisis de ne pas skip les running tests" 
                    }


                }
            }
        }
   }
}
