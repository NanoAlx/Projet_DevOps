pipeline {
    agent any
    parameters {
        choice(name: 'MOIS', choices: ['Janvier', 'Fevrier', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet','Aout', 'Septembre', 'Octobre','Novembre', 'Decembre'], description: 'Choisissez le mois')
        extendedChoice(name: 'US_CHOISIS', 
            type: 'PT_CHECKBOX', 
            multiSelectDelimiter: ',', 
            groovyScript: """
                return [
                    'Janvier': ['Rédiger un journal intime'],
                    'Fevrier': ['Rendre votre espace plus agréable'],
                    'Mars': ['Manger sainement', 'Faire de l\'exercice', 'Arrêter de fumer', 'Prendre soin de soi']
                ].get(params.MOIS, [])
            """, 
            description: 'Sélectionnez les User Stories réalisées')
    }
    stages {
        stage('Verification') {
            steps {
                script {
                    echo "US choisis pour le mois de ${params.MOIS}: ${params.US_CHOISIS}"
                }
            }
        }
        // Ajoutez d'autres stages pour les autres mois si nécessaire
    }
}
