pipeline {
    agent any
    parameters { 
        choice(name: 'MOIS', choices: ['Janvier', 'Fevrier', 'Mars'], description: 'Choisissez le mois')

        activeChoiceParam('US_CHOISIS') {
            choiceType('CHECKBOX')
            groovyScript {
                script("""
                    def response = []
                    switch(params.MOIS) {
                        case 'Janvier':
                            response = ['Rédiger un journal intime']
                            break
                        case 'Fevrier':
                            response = ['Rendre votre espace plus agréable']
                            break
                        case 'Mars':
                            response = ['Manger sainement', 'Faire de l\'exercice', 'Arrêter de fumer', 'Prendre soin de soi']
                            break
                    }
                    return response
                """)
            }
        }
    }
    stages {
        stage('Verification') {
            steps {
                script {
                    echo "US choisis pour le mois de ${params.MOIS}: ${params.US_CHOISIS}"
                }
            }
        }
        // Autres stages...
    }
}
